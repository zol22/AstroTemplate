---
/**
 * * Contact section for the website
 */

import { Image } from "astro:assets";

// components
import ContactForm from "@components/Forms/ContactForm.astro";

interface Props {
	class?: string;
}

const { class: className } = Astro.props as Props;

import hero from "@assets/images/hero.jpg";
---


	<h2 class="col text-center h2 uppercase text-pretty mt-8 mb-6">Title</h2>
	<div class="grid gap-y-10 md:grid-cols-2 grid-cols-1">
		<div class="border-primary-300 pt-8 md:border-r md:pr-20 md:pl-12">
			<p class="col description text-lg">
				Description
			</p>
			<div class="col mx-auto mt-8  overflow-hidden">
				<Image
					src={hero}
					alt="Minimalist home office setup with a white desk, MacBook, vintage camera, clear acrylic chair, potted snake plant, and wooden ladder against a white wall"
					width={450}
					densities={[1.5, 2]}
					class="h-full w-full object-cover"
				/>
			</div>
		</div>
		<div class="md:pr-12 md:pl-20">
			<ContactForm />
		</div>
	</div>

